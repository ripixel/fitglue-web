{
  "name": "fitglue-web",
  "version": "1.0.0",
  "description": "FitGlue web frontend and Firebase Hosting configuration",
  "scripts": {
    "serve": "npx http-server public -p 5000 -o",
    "serve:firebase": "firebase serve",
    "deploy": "firebase deploy --only hosting",
    "lint": "npm run lint:html && npm run lint:css",
    "lint:html": "htmlhint public/**/*.html",
    "lint:css": "stylelint public/**/*.css",
    "lint:css:fix": "stylelint public/**/*.css --fix",
    "build": "esbuild src/auth.ts --bundle --outfile=public/js/auth.js --format=esm --target=es2020",
    "watch": "esbuild src/auth.ts --bundle --outfile=public/js/auth.js --format=esm --target=es2020 --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ripixel/fitglue-web.git"
  },
  "author": "James King",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.27.2",
    "firebase-tools": "^13.24.1",
    "htmlhint": "^1.1.4",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "firebase": "^10.0.0"
  }
}
